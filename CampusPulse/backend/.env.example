# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/campuspulse
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30

# Redis Configuration  
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false
RELOAD=false

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,https://campuspulse.com
ALLOWED_HOSTS=*

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=100

# File Storage
STORAGE_TYPE=local
LOCAL_STORAGE_PATH=./storage

# AWS S3 Configuration (if using S3)
S3_BUCKET=campuspulse-storage
S3_REGION=us-west-2
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Google Cloud Storage (if using GCS)
GCS_BUCKET=campuspulse-storage
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@campuspulse.com

# External APIs
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Monitoring and Logging
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=INFO
STRUCTURED_LOGGING=true

# Forensics Configuration
ENABLE_VIDEO_FORENSICS=true
FORENSICS_QUEUE_NAME=forensics
MAX_VIDEO_SIZE_MB=500
FFMPEG_TIMEOUT_SECONDS=300

# Background Jobs
ENABLE_BACKGROUND_TASKS=true
WORKER_CONCURRENCY=4
TASK_TIMEOUT_SECONDS=600

# Security
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# API Configuration
API_VERSION=v1
API_TITLE=CampusPulse API
API_DESCRIPTION=AI-powered athletic performance analysis platform
DOCS_URL=/docs
REDOC_URL=/redoc

# Performance
REQUEST_TIMEOUT_SECONDS=30
MAX_REQUEST_SIZE_MB=100
GZIP_MINIMUM_SIZE=1000

# Cache Configuration
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE_MB=100

# Development
MOCK_EXTERNAL_APIS=false
SKIP_AUTH_FOR_TESTING=false
ENABLE_PROFILING=false

# Analytics
ENABLE_USAGE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=90
CLEANUP_OLD_LOGS_DAYS=30

# Machine Learning
ML_MODEL_PATH=./models
ENABLE_ML_INFERENCE=true
ML_BATCH_SIZE=32
ML_TIMEOUT_SECONDS=60

# Backup Configuration
ENABLE_AUTO_BACKUP=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
S3_BACKUP_BUCKET=campuspulse-backups

# Admin Configuration
ADMIN_EMAIL=admin@campuspulse.com
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-me-in-production
CREATE_ADMIN_ON_STARTUP=true

# Feature Flags
ENABLE_USER_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_SOCIAL_LOGIN=false
ENABLE_TWO_FACTOR_AUTH=false
ENABLE_REAL_TIME_NOTIFICATIONS=true