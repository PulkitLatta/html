# Database configuration
DATABASE_URL=postgresql://campuspulse_user:your_password@localhost:5432/campuspulse_db

# Redis configuration  
REDIS_URL=redis://localhost:6379/0

# JWT Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Storage configuration
STORAGE_TYPE=local
UPLOAD_DIR=uploads

# AWS S3 (if using S3 storage)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_S3_BUCKET=campuspulse-videos
# AWS_REGION=us-east-1

# Google Cloud Storage (if using GCS storage)  
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
# GCS_BUCKET=campuspulse-videos

# API Settings
API_RATE_LIMIT=100/minute
MAX_UPLOAD_SIZE_MB=100

# Worker configuration
FORENSICS_WORKER_CONCURRENCY=4
FORENSICS_JOB_TIMEOUT=600

# Email configuration (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# SMTP_TLS=true

# Monitoring and logging
LOG_LEVEL=INFO
SENTRY_DSN=

# Development settings
DEBUG=true
RELOAD=true